{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "JWT_SECRET",
        "PASSWORD_ITERATIONS",
        "PASSWORD_SALT",
        "PASSWORD_KEYLEN"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
