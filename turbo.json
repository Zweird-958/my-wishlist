{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "EXPO_PUBLIC_API_URL",
        "JWT_SECRET",
        "PASSWORD_ITERATIONS",
        "PASSWORD_SALT",
        "PASSWORD_KEYLEN",
        "S3_BUCKET_NAME",
        "S3_SECRET_ACCESS_KEY",
        "S3_ACCESS_KEY_ID",
        "S3_URL",
        "S3_PUBLIC_URL",
        "NODE_ENV",
        "NEXT_PUBLIC_APP_ENV",
        "DATABASE_URL"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
