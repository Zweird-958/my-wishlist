{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreDependencies": ["autoprefixer", "postcss"],
  "workspaces": {
    "apps/mobile": {
      "entry": [
        "src/app/**/*.ts",
        "src/app/**/*.tsx",
        "src/index.ts",
        "metro.config.js"
      ],
      "ignore": ["babel.config.js", "src/components/ui/**/*.{ts,tsx}"],
      "ignoreDependencies": ["@babel/runtime"]
    },
    "packages/ui": {
      "entry": ["src/components/ui/*/index.tsx"]
    }
  },
  "rules": {
    "duplicates": "warn",
    "binaries": "warn"
  }
}
