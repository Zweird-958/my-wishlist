{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "web": "bun run --cwd apps/web dev",
    "desktop": "bun run --cwd apps/desktop tauri dev",
    "web:generate": "bun run --cwd apps/web generate",
    "mobile:ios": "bun run --cwd apps/mobile ios",
    "mobile:android": "bun run --cwd apps/mobile android",
    "db:migrate": "bun run --cwd packages/db migrate",
    "db:migrate:create": "bun run --cwd packages/db migrate:create",
    "db:generate": "bun run --cwd packages/db generate",
    "db:seed": "bun run --cwd packages/db seed",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "typecheck": "bun run --filter='**' typecheck",
    "mobile:check": "bun run --cwd apps/mobile expo-check",
    "check": "bun run lint && bun run typecheck && bun run format && bun run mobile:check",
    "clear": "find . -type d \\( -name \"node_modules\" -o -name \".next\" \\) -exec rm -rf {} +\\ && rm bun.lockb",
    "env-symlink": "ln -sf $PWD/.env ./apps/web && ln -sf $PWD/.env ./apps/desktop && ln -sf $PWD/.env ./apps/mobile && ln -sf $PWD/.env ./packages/db"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  },
  "keywords": [],
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
