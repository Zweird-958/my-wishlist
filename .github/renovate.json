{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@monorepo/"],
      "enabled": false
    }
  ],
  "baseBranches": ["main", "/^config\\/.*/"],
  "updateInternalDeps": true,
  "rangeStrategy": "bump",
  "automerge": true
}
